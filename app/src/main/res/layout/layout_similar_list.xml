<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="160dp"
    android:layout_height="250dp"
    android:id="@+id/ll_rel"
    android:background="@drawable/border_tablebox"
    android:orientation="vertical"
    android:layout_margin="5dp"
   >


    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="150dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_img"
        android:layout_width="140dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:src="@drawable/list_gray"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/item_img"
        android:background="@drawable/whitebg"
      >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zuway"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            />

        <TextView
            android:id="@+id/product_name"
            android:layout_below="@+id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voonik Georgette Saree... "
            android:textSize="12dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins"
            android:singleLine="true"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progress="2"
            android:progressTint="@color/gold"
            android:stepSize="1.0"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/item_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 1245"
                android:textSize="13dp"
                android:textStyle="bold"
                android:foreground="@drawable/strike_through"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/item_saveprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(60%)"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/green"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/item_disprice"
                android:layout_below="@+id/webname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 499"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/text"
                />

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>


</LinearLayout>