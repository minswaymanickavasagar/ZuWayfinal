<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_box"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Zuway"
                android:fontFamily="@font/calibri"

                android:textColor="@color/appcolorgray"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/places_ic_clear"/>

        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rateHeader"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/calibri"

            android:text="Product Quantity Details"
            android:textColor="@color/appcolordarkyellow"
            android:textSize="18dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_qut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/appcolorgray"
            android:drawableStart="@drawable/ic_border_color_black_24dp"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:hint="Product Quantity "
            android:maxLength="3"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/appcolordarkyellow"
            android:textSize="18dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/sub_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:fontFamily="@font/calibri"

            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/border_button"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>