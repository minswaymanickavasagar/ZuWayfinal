<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_mccard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/margin_10dp"
    card_view:cardMaxElevation="@dimen/margin_10dp"
    card_view:contentPadding="@dimen/margin_10dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mc_product_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:resizeMode="horizontal|vertical"
                    android:src="@drawable/logo_big" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llay_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mc_product_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Voonik Georgette Saree"
                        android:textAlignment="textStart"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppins"

                        android:textStyle="bold"
                        android:singleLine="true"/>




                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llay_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Size   :"
                        android:fontFamily="@font/poppins"

                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/mc_product_size"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:text="S"
                        android:fontFamily="@font/poppins"

                        android:textAlignment="center"
                        android:textColor="@color/appcolorgray"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" / "
                        android:fontFamily="@font/poppins"

                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Color   :"
                        android:fontFamily="@font/poppins"

                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/mc_product_color"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:text="yellow"
                        android:fontFamily="@font/poppins"

                        android:textAlignment="center"
                        android:textColor="@color/appcolorgray"
                        android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/webname"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                   <!-- <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" â‚¹  "
                        android:textColor="@color/appcolordarkyellow"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        />
-->
                    <TextView
                        android:id="@+id/mc_product_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/webname"
                        android:text=""
                        android:layout_weight="2"
                        android:textColor="@color/text"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mc_product_priceorgi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Rs 1245"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/mc_product_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="(Save60%)"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/green"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:visibility="gone"
                         />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity : "
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/text"
                        android:textSize="14dp"
                        android:textStyle="normal" />


                    <TextView
                        android:layout_toRightOf="@+id/qq"
                        android:id="@+id/item_qut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/return_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:text="Return"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/calibri"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                       />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charge : "
                        android:textColor="@color/text"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/poppins"
                        />


                    <TextView
                        android:id="@+id/item_rp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/mc_product_deliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver Charge"
                        android:textColor="@color/text"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" | "
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        />


                    <TextView
                        android:id="@+id/mc_product_delich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Free"
                        android:textColor="@color/appcolorgray"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>