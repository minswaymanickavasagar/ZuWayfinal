<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReturnPolicyScreen"
    android:orientation="vertical">
    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_tr"
                android:visibility="gone" />


            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:text="Catact Us"
                android:textColor="@color/appcolordarkyellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="gone"
                android:fontFamily="@font/poppins"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="OrderId :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/et_Orderid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_trans"
                android:hint="Order Id"
                android:focusable="false"
                android:inputType="textPersonName"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="MobileNo :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_trans"
                android:hint="Phone"
                android:inputType="phone"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="User Name :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />


            <EditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_trans"
                android:hint="Your Name"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Address :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />


            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_trans"
                android:hint="Address"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Product Name :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />


            <EditText
                android:id="@+id/et_p_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_trans"
                android:hint="Product Name"
                android:focusable="false"
                android:inputType="textEmailAddress"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Reason :"
                android:textColor="@color/text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />

            <EditText
                android:id="@+id/et_message"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_trans"
                android:breakStrategy="balanced"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:hint="Your Reason"
                android:inputType="textMultiLine|textCapSentences"
                android:singleLine="false"
                android:paddingTop="35dp"
                android:textColor="@color/text"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/poppins"
                android:textSize="17sp"
                />

<!--
            <TextView
                android:id="@+id/help_submit"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />-->

            <Button
                android:id="@+id/help_submit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>