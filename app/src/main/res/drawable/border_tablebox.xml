<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#9EB8FF" android:type="linear"/>
        <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp"/>
        <size android:width="60dp" android:height="60dp"/>
        <stroke android:width="2dp" android:color="#000"/>
    </shape>
</item>
<item>
    <shape>
        <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#fff" android:type="linear"/>
        <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp"/>
        <size android:width="60dp" android:height="60dp"/>
        <stroke android:width="0.5dp" android:color="@color/gray"/>
    </shape>
</item>
</selector>